<h1>Editing Book</h1>
<%= form_with model: @book, class: "edit_book", id: "edit_book_#{params[:id]}" do |f| %>
  <div class="field">
    <%= f.label :title, "Title" %>
    <%= f.text_field :title, class: "book_title" %>
  </div>

  <div class="field">
    <%= f.label :body, "Body" %>
    <%= f.text_area :body, class: "book_body" %>
  </div>

  <div class="actions">
  <%= f.submit 'Update Book' %>
  </div>
<% end %>

<%= link_to 'Show', book_path(@book.id), class: "show_#{params[:id]}" %>
 |
<%= link_to 'Back',"/books", class: "back" %>